version: '3.8'

services:
  frontend:
    image: frontend
    ports:
      - 5000:5000
    container_name: frontendcontainer

  backend:
    image: backend
    ports:
      - 8080:8080
    environment:
      - REDIS_HOST=rediscontainer
    container_name: backendcontainer

  redis:
    image: redis
    ports:
      - 6379:6379
    container_name: rediscontainer
